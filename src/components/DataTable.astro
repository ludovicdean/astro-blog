---
interface TableData {
    headers: string[];
    rows: (string | number)[][];
}

interface Props {
    data: TableData;
}

const data: TableData = {
    headers: ['méta-caractère', 'explication', 'regex', 'exemple'],
    rows: [
        ['+', '1 à n fois le caractère qui le précède', 'dev+', 'dev, devv, devvv'],
        ['?', '0 ou n occurrences du caractère ou du groupe précédent', 'dev?', 'de, dev, devv'],
        ['^', "le début d'une ligne", '^dev', 'dev, deva, devb, develop mais pas adev'],
        ['$', "la fin d'une ligne", 'devenir$', 'dev en devenir'],
        ['\\b', "indique la limite d'un mot", '\\bdev\\b', 'dev mais pas devenir'],
        ['\\|', "l'élément à gauche ou celui à droite de la barre", 'devenir\\|deviner', 'devenir, deviner'],
        ['{m}', "le nombre exact d'occurrences de l'élément précédent", '1{3}', '111'],
        ['{m, n}', "l'intervalle d'occurrences recherché (1 à 3 par exemple)", '1{3, 4}', '111, 1111'],
        ['{m,}', "l'intervalle d'occurrences recherché à m minimum", '1{2,}', '11, 111, 1111'],
        ['[abc]', "l'un des caractères", '[dev]', 'd, e, v'],
        ['[^abc]', "aucun de ces caractères", '[^dev]', 'ni d, ni e, ni v'],
        ['\\', "caractère d'échappement d'un méta-caractère", '', '']
    ]
};
---

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border-2 border-gray-300">
        <thead class="bg-yellow-100">
        <tr class="bg-gray-100">
            {data.headers.map((header) => (
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-2">
                        {header}
                    </th>
            ))}
        </tr>
        </thead>
        <tbody class="[&>tr:nth-child(even)]:bg-yellow-100">
        {data.rows.map((row) => (
                <tr class="border-2 border-gray-200">
                    {row.map((cell) => (
                            <td class="border-solid border-2 px-1 py-4 whitespace-nowrap text-sm text-gray-500">
                                {cell}
                            </td>
                    ))}
                </tr>
        ))}
        </tbody>
    </table>
</div>