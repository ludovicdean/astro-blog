---
interface TableData {
    headers: string[];
    rows: (string | number)[][];
}

interface Props {
    data: TableData;
}

const { data } = Astro.props;
---

<div class="overflow-x-auto my-10">
    <table class="min-w-full bg-white border-2 border-gray-300">
        <thead class="bg-yellow-300">
        <tr class="bg-gray-100">
            {data.headers.map((header) => (
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 text-xl tracking-wider border-2">
                        {header}
                    </th>
            ))}
        </tr>
        </thead>
        <tbody class="[&>tr:nth-child(even)]:bg-yellow-300">
        {data.rows.map((row) => (
                <tr class="border-2 border-gray-200">
                    {row.map((cell) => (
                            <td class="border-solid border-2 px-6 py-4 whitespace-nowrap text-md text-gray-500">
                                {cell}
                            </td>
                    ))}
                </tr>
        ))}
        </tbody>
    </table>
</div>