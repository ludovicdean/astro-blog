---
import FormattedDate from "./FormattedDate.astro";
const { post } = Astro.props;
const base = import.meta.env.BASE_URL;
---

{
    post.data.url ? (
        <a
            href={post.data.url}
            target="_blank"
            class="no-underline text-black hover:text-accent"
        >
            <img
                width={720}
                height={360}
                src={base + post.data.banner}
                alt=""
                class="hover:box-shadow"
            />
            <h4 class="title">{post.data.title}</h4>
            <p class="date">
                <FormattedDate date={post.data.date} />
            </p>
        </a>
    ) : (
        <a href={`${base + "/blog/" + post.slug}/`} class="no-underline">
            <img
                width={720}
                height={360}
                src={base + post.data.banner}
                alt=""
                class="hover:box-shadow"
            />
            <h4 class="title m-0 leading-10 text-black hover:text-accent">
                {post.data.title}
            </h4>
            <p class="date">
                <FormattedDate date={post.data.updatedDate ?? post.data.date} />
            </p>
        </a>
    )
}
