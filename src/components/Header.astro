---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialLinks from "./SocialLinks.astro";
const base = import.meta.env.BASE_URL;
---

<nav class="border-gray-200 bg-gradient-to-br from-black to-gray-900">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/devendevenir" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/public/images/logo.png" alt="" class="size-16">
      <span class="self-center text-2xl font-semibold whitespace-nowrap text-white">Dev<span class="text-yellow-400">En</span>Devenir</span>
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none dark:text-gray-400 dark:hover:bg-gray-700" aria-controls="navbar-default" aria-expanded="false">
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="list-none font-medium flex flex-col p-4 md:p-0 mt-4 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0">
        <li class="text-center">
          <HeaderLink href="/" class="nav-link block w-full py-2 px-3 rounded bg-transparent md:p-0 font-bold text-white hover:text-yellow-400" aria-current="page">Accueil</HeaderLink>
        </li>
        <li class="text-center">
          <HeaderLink href="/about" class="nav-link block w-full py-2 px-3 rounded sm:bg-transparent md:p-0 font-bold text-white hover:text-yellow-400">Ã€ propos</HeaderLink>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.querySelector('[data-collapse-toggle="navbar-default"]');
    const menu = document.getElementById('navbar-default');
    const navLinks = document.querySelectorAll('.nav-link');

    button.addEventListener('click', function() {
      menu.classList.toggle('hidden');
      const expanded = button.getAttribute('aria-expanded') === 'true' || false;
      button.setAttribute('aria-expanded', !expanded);
    });
  });</script>