---
const { post } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<li class="relative w-full md:w-[calc(50%-0.5rem)] h-64 list-none">
    <a href={post.data.url ?? `${base + "/blog/" + post.slug}/`} class="no-underline block h-full">
        <div class="relative h-full w-full overflow-hidden">
            <img src={ base + post.data.banner } class="h-full w-full object-cover">
            <div class="absolute inset-x-0 bottom-0 bg-slate-900 bg-opacity-50">
                <p class="text-white text-lg font-bold py-1 px-2 text-right mb-0">{post.data.title}</p>
            </div>
        </div>
    </a>
</li>