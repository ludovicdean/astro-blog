---
const { post } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<li class="relative overflow-hidden rounded-2xl">
    <a
            href={post.data.url ?? `${base + "/blog/" + post.slug}/`}
            target="_blank"
            class="no-underline text-black hover:text-accent"
    >
    <img src={ base + post.data.banner } class="w-full h-full object-cover">
    <div class="absolute bottom-0 right-0 bg-slate-900 bg-opacity-50 w-full">
        <p class="text-slate-200 text-2xl font-bold mx-0 px-4 text-right">{post.data.title}</p>
    </div>
    </a>
</li>