---
const base = import.meta.env.BASE_URL;
const { tags, context } = Astro.props;
function slugify(str) {
    return String(str)
        .normalize("NFKD")
        .replace(/[\u0300-\u036f]/g, "")
        .trim()
        .toLowerCase()
        .replace(/[^a-z0-9 -]/g, "")
        .replace(/\s+/g, "-")
        .replace(/-+/g, "-");
}
---

{
    context == "post" ? (
        <div class="pb-6 flex flex-wrap">
            {Object.entries(tags).map(([key, val]) => (
                <span class="inline text-lg rounded-xl mx-2 px-2 my-2 bg-slate-900 hover:animate-pulse">
                    <span>
                        <a
                            href={`${base + "/tags/" + slugify(val)}/`}
                            class="no-underline text-white font-bold text-accent hover:text-white"
                        >
                            {val}
                        </a>
                    </span>
                </span>
            ))}
        </div>
    ) : (
        <div class="pb-6 flex flex-wrap">
            {Object.entries(tags).map(([key, val]) => (
                <span class="inline text-lg rounded-xl mx-2 px-2 my-2 bg-slate-900  hover:animate-pulse">
                    <span>
                        <a
                            href={`${base + "/tags/" + slugify(key)}/`}
                            class="no-underline text-white font-bold text-accent hover:text-white"
                        >
                            {key}
                        </a>
                    </span>
                    <span class="pr-4 pl-3 text-yellow-400">{val}</span>
                </span>
            ))}
        </div>
    )
}
